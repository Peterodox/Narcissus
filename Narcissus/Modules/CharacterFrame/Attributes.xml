	<Frame name="Narci_DetailedAttributeTemplateShortLeft" virtual="true" frameLevel="9" inherits="NarciAttributeSharedTemplate">
		<Size>
			<AbsDimension x="112" y="48"/>
		</Size>
		<KeyValues>
			<KeyValue key="noAnimation" value="true" type="Boolean"/>
